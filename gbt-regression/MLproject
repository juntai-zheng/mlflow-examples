conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data-path: str
      n-trees: int
      m-depth: int
      learning-rate: float
      test-percent: float
      loss: str
      label-col: str
      feat-cols: str
    command: "python main_gbt.py {data-path} {n-trees} {m-depth} {learning-rate} {test-percent} {loss} {label-col} {feat-cols}"
  example:
    parameters:
      n-trees: int
      m-depth: int
      learning-rate: float
      test-percent: float
      loss: str
      label-col: str
      feat-cols: str
    command: "python example_gbt.py {n-trees} {m-depth} {learning-rate} {test-percent} {loss} {label-col} {feat-cols}"