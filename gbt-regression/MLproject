conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data-path: str
      n-trees: {type: int, default 100}
      m-depth: {type: int, default 3}
      learning-rate: {type: float, default: .1}
      test-percent: {type: float, default: .3}
      loss: {type: str, default: "rmse"}
      label-col: str
      feat-cols: str
    command: "python main_gbt.py {data-path} {n-trees} {m-depth} {learning-rate} {test-percent} {loss} {label-col} {feat-cols}"
  example:
    parameters:
      n-trees: {type: int, default 100}
      m-depth: {type: int, default 3}
      learning-rate: {type: float, default: .1}
      test-percent: {type: float, default: .3}
      loss: {type: str, default: "rmse"}
      label-col: str
      feat-cols: str
    command: "python example_gbt.py {n-trees} {m-depth} {learning-rate} {test-percent} {loss} {label-col} {feat-cols}"
