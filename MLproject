conda_env: conda.yaml

entry_points:
  gbt-regression-main:
    parameters:
      data-path: str
      n-trees: {type: int, default 100}
      m-depth: {type: int, default 3}
      learning-rate: {type: float, default: .1}
      test-percent: {type: float, default: .3}
      loss: {type: str, default: "rmse"}
      label-col: str
      feat-cols: str
    command: "python gbt-regression/main_gbt.py {data-path} {n-trees} {m-depth} {learning-rate} {test-percent} {loss} {label-col} {feat-cols}"
  gbt-regression-example:
    parameters:
      n-trees: {type: int, default: 100}
      m-depth: {type: int, default: 3}
      learning-rate: {type: float, default: .1}
      test-percent: {type: float, default: .3}
      loss: {type: str, default: "rmse"}
      label-col: {type: str, default: "price"}
      feat-cols: {type: str, default: "carat,cut,color,clarity,depth,table,x,y,z"}
    command: "python gbt-regression/example_gbt.py {n-trees} {m-depth} {learning-rate} {test-percent} {loss} {label-col} {feat-cols}"
  linear-regression-main:
    parameters:
      data-path: str
      alpha: {type: float, default: 1.0}
      l1-ratio: {type: float, default: .5}
      test-percent: {type: float, default: .3}
      label-col: str
      feat-cols: str
    command: "python linear-regression/main_linear.py {data-path} {alpha} {l1-ratio} {test-percent} {label-col} {feat-cols}"
  linear-regression-example:
    parameters:
      alpha: {type: float, default: 1.0}
      l1-ratio: {type: float, default: .5}
      test-percent: {type: float, default: .3}
      label-col: {type: str, default: "price"}
      feat-cols: {type: str, default: "carat,cut,color,clarity,depth,table,x,y,z"}
    command: "python linear-regression/example_linear.py {alpha} {l1-ratio} {test-percent} {label-col} {feat-cols}"
